{
  "name": "Permutive Extension",
  "version": "0.1",
  "description": "",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "webNavigation",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Permutive Events",
    "default_icon": "icon-enabled.png"
  },
  "web_accessible_resources": [
    "dist/loader.js",
    "dist/app.js"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}